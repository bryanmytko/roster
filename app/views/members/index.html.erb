<h1>Nighthold Roster</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Equipped ilvl</th>
      <th>Display ilvl</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <% if member.ilvl_display %>
        <tr <%= tr_color(member) %>>
          <td><%= member.id %></td>
          <td><%= member.name %></td>
          <td><%= member.ilvl_equipped %></td>
          <td><%= member.ilvl_display %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</ul>
